---
// Henter parametrene fra Astro.props
const { href="#", target="_self", variant=""} = Astro.props; 

const variantClasses = {
    "textlink": "font-semibold textlinks",
    "primary": "bg-blue-400 text-neutral-100 rounded border-2 border-blue-400 font-semibold text-2xl px-4 py-2 hover:bg-blue-500 hover:border-blue-500"
}
---
<a href={href} class="" target={target} class:list={[variantClasses[variant]]}><slot /></a>

<style>
    .textlinks:hover{
        text-decoration-line: underline;
    }
</style>